extends layout

block content
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#')
          img(id='brand' src='/images/formicon.png')
      ul.nav.navbar-nav.navbar-right
        li
          h4.navbar-text 
            i(class='glyphicon glyphicon-user')  
              span.user #{username}
        li
          a(href='/signout') Sign Out
  .wrapper
    .page-header
      h1 Build a Form
    .row
      .col-md-6.col
        #form-build
          .row
            .col-md-6.col-md-offset-3
              input.form-control(type='text', placeholder='Form Name')
          .row
            .col-md-12.droppable-section
          .row
            .col-md-12.droppable-section
          .row
            .col-md-12.droppable-section
          .row
            .col-md-12.droppable-section
          .row
            .col-md-12.droppable-section
          .row
            .col-md-4.col-md-offset-2
              button.btn.btn-danger Cancel
            .col-md-4.col-md-offset-2
              button.btn.btn-success Submit
        button#preview.btn.btn-info Preview Form
      .col-md-6
        ul.nav.nav-tabs
              li(role='presentation')
                a(href='/dashboard') Components
              li.active(role='presentation')
                a(href='/dashboard/comp-options') Component Options
              li(role='presentation')
                a(href='#') Form Options
        h3 Component Options
      