extends layout

block content
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#')
          img(id='brand' src='/images/formicon.png')
      ul.nav.navbar-nav.navbar-right
        li
          h4.navbar-text 
            i(class='glyphicon glyphicon-user')  
              span.user #{username}
        li
          a(href='/signout') Sign Out
  .wrapper
    .page-header
      h1 Build a Form
    .row
      .col-md-6.col
        #form-preview
        button#preview.btn.btn-info Preview Form
      .col-md-6
        ul.nav.nav-tabs(role='tablist')
          li.active(role='presentation')
            a(href='#components', aria-controls='components', role='tab', data-toggle='tab') Components
          li(role='presentation')
            a(href='#options', aria-controls='options', role='tab', data-toggle='tab') Options
          li(role='presentation')
            a(href='#settings', aria-controls='settings', role='tab', data-toggle='tab') Settings
        .tab-content
          #components.tab-pane.active(role='tabpanel')
            h3 Form Components

            h4 inputs
            .input-group.draggable.ui-widget-content(data-type='text')
              label Text
              input.form-control(type='text', placeholder='Text Input', aria-describedby='basic-addon1')
            .input-group.draggable.ui-widget-content(data-type='email')
              label Email
              input.form-control(type='email', placeholder='Email Input', aria-describedby='basic-addon1')
            .input-group.draggable.ui-widget-content(data-type='password')
              label Password
              input.form-control(type='password', placeholder='Password Input', aria-describedby='basic-addon1')
            .input-group.draggable.ui-widget-content(data-type='money') 
              span.input-group-addon $
              input.form-control(type='text', placeholder='Money Input' aria-label='Amount (to the nearest dollar)')
              span.input-group-addon .00
            
            h4 checkboxes
            .input-group.draggable.ui-widget-content
              span.input-group-addon
                input(type='checkbox', aria-label='...')
              input.form-control(type='text', aria-label='...')
            h4 radio buttons
            .input-group.draggable.ui-widget-content
              span.input-group-addon
                input(type='radio', aria-label='...')
              input.form-control(type='text', aria-label='...')
          #options.tab-pane(role='tabpanel')
            h3 Component Options
            form#options-form
              p.help-block Text Input
              .form-group
                label(for='component-label') Label
                input#component-label.form-control(type='text', placeholder='Label')
              .form-group
                label(for='component-name') Name
                input#component-name.form-control(type='text', placeholder='Name')
              .form-group
                label(for='component-placeholder') Placeholder text
                input#component-placeholder.form-control(type='text', placeholder='Placeholder text')
              .form-group
                label(for='component-default-value') Default value
                input#component-default-value.form-control(type='text', placeholder='Default value')  
              .checkbox
                label
                  input#component-required(type='checkbox')
                  |  Required?
              button#options-reset.btn.btn-default(type='reset') Clear    
          #settings.tab-pane(role='tabpanel') 
            h3 Settings
            p Hellow


